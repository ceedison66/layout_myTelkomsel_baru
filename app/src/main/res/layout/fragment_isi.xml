<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".isiFragment">

    <!-- TODO: Update blank fragment layout -->


        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_isi"
            android:layout_width="190dp"
            android:layout_height="55dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="4dp"
            >

                    <RelativeLayout
                        android:id="@+id/card_isi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/isi_rounded"
                        >

                        <TextView
                            android:id="@+id/txt_rupiah"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="11dp"
                            android:text="Rp 10.000.000"
                            android:textSize="15dp"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:layout_below="@+id/txt_rupiah"
                            android:text="Pulsa anda"
                            android:textSize="11dp"
                            android:textColor="@android:color/black"/>

                        <Button
                            android:id="@+id/btn_isi"
                            android:text="Isi"
                            android:textSize="11dp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:gravity="center"
                            android:background="@drawable/btn_rounded"
                            android:layout_width="54dp"
                            android:layout_height="26dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="125dp"
                            android:clickable="true"/>

                    </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/tambahan_isi"
            android:layout_width="380dp"
            android:layout_height="55dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            android:background="@drawable/cardview_border">

            <TextView
                android:id="@+id/txt_rupiah2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="11dp"
                android:text="Rp 10.000.000"
                android:textSize="15dp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_below="@+id/txt_rupiah2"
                android:text="Pulsa anda"
                android:textSize="11dp"
                android:textColor="@android:color/black"/>

            <Button
                android:id="@+id/btn_isi2"
                android:text="Isi"
                android:textSize="11dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:gravity="center"
                android:background="@drawable/btn_rounded"
                android:layout_width="54dp"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="315dp"
                android:clickable="true"/>

        </RelativeLayout>





    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_kirim"
        android:layout_width="190dp"
        android:layout_height="55dp"
        android:layout_marginLeft="206dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="4dp"
        >

        <RelativeLayout
            android:id="@+id/card_kirim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/kirim_rounded"
            >

                        <TextView
                            android:id="@+id/txt_kirim_hadiah"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="11dp"
                            android:text="Kirim Hadiah"
                            android:textSize="15dp"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:layout_below="@+id/txt_kirim_hadiah"
                            android:text="Pulsa dan Paket"
                            android:textSize="11dp"
                            android:textColor="@android:color/black"/>

                        <Button
                            android:id="@+id/btn_kirim"
                            android:text="Kirim"
                            android:textSize="11dp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:gravity="center"
                            android:background="@drawable/btn_rounded"
                            android:layout_width="54dp"
                            android:layout_height="26dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="125dp"
                            android:clickable="true"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:id="@+id/tambahan_kirim"
        android:layout_width="380dp"
        android:layout_height="55dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:background="@drawable/cardview_border">

        <TextView
            android:id="@+id/txt_kirim_hadiah2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="11dp"
            android:text="Kirim Hadiah"
            android:textSize="15dp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_below="@+id/txt_kirim_hadiah2"
            android:text="Pulsa dan Paket"
            android:textSize="11dp"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/btn_kirim2"
            android:text="Kirim"
            android:textSize="11dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:gravity="center"
            android:background="@drawable/btn_rounded"
            android:layout_width="54dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="315dp"
            android:clickable="true"/>

    </RelativeLayout>

</RelativeLayout>
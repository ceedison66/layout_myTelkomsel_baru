<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="310dp"
        android:layout_height="120dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="160dp"
                android:layout_height="14dp"
                app:srcCompat="@drawable/trapesium" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Promo - Berakhir dalam 3 hari"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/imageViewRecycle"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_omg"/>

            <TextView
                android:id="@+id/textRecycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Combo Internet OMG!"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/textRecycle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27 GB"
                android:textSize="29sp"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/black"/>

            <View
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="115dp"
                android:layout_centerHorizontal="true"
                android:background="#57C3C2C2" />


            <TextView
                android:id="@+id/textRecycle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 Hari"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="58dp"
                android:layout_marginLeft="126dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/textRecycle4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 179.000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="83dp"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/holo_red_light"
                />

            <TextView
                android:id="@+id/textRecycle5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 195.000"
                android:textSize="18sp"
                android:layout_marginTop="88dp"
                android:layout_marginLeft="140dp"
                android:textColor="#616F7171"
                />

            <View
                android:layout_width="105dp"
                android:layout_height="1dp"
                android:layout_marginTop="104dp"
                android:layout_marginLeft="140dp"
                android:layout_centerHorizontal="true"
                android:background="#57C3C2C2" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#57DDDADA"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical">

            //Isi
            <fragment
                android:id="@+id/fragment"
                android:name="com.example.ui_belanja.isiFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            //Pembatas
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#57DDDADA"
                android:orientation="vertical"></LinearLayout>


            //Special untuk Anda
            <fragment
                android:id="@+id/fragment2"
                android:name="com.example.ui_belanja.specialFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            //Pembatas
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#57DDDADA"
                android:orientation="vertical">
            </LinearLayout>



            //Pilih Paket Kuota
            <fragment
                android:id="@+id/fragment3"
                android:name="com.example.ui_belanja.pilihpaketFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            //Paket Internet
            <fragment
                android:id="@+id/fragment4"
                android:name="com.example.ui_belanja.paketInternetFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            //Pembatas
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#57DDDADA"
                android:orientation="vertical">
            </LinearLayout>


            //Pembelian Terakhir
            <fragment
                android:id="@+id/fragment6"
                android:name="com.example.ui_belanja.pembelianFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />




        </LinearLayout>

    </ScrollView>

</RelativeLayout>